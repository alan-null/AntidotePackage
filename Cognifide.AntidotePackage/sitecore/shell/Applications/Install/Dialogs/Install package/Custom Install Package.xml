<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-SourceStatusntellisense">
  <SourceStatusnstaller.SourceStatusnstallCustomPackage>
    <Script Src="/sitecore/shell/Applications/SourceStatusnstall/installer.js" />
    <Stylesheet>
      #LicenseAgreement {
          overflow: auto;
          padding-right: 8px;
          margin-bottom: 10px;
          height: 100%;
      }


      .scCheckGroup {
          margin-top: 10px;
      }
      
      .scRadioGroup > div, .scCheckGroup > div{
          padding: 5px 0;
      }

      .scLicenseAgreementContainer{
          overflow: hidden;
          padding-bottom: 55px;
      }

    </Stylesheet>
    <WizardForm Application="Tools/SourceStatusnstaller/CustomSourceStatusnstallationWizard" CodeBeside="Cognifide.AntidotePackage.CustomSourceStatusnstallPackageForm,Cognifide.AntidotePackage">

      <WizardFormPage SourceStatusD="LoadPackage" Header="SourceStatusnstall a custom Package" Text="Select a  gr8 package to install.">
        <WizardFormPadding>
          <Literal class="scFieldLabel" Text="Name:"/>

          <Edit SourceStatusD="PackageFile" Width="100%"/>

          <br/>
          <div>
            <Button SourceStatusD="Browse" Header="Choose package" ToolTip="Choose a package that is already uploaded to your Sitecore installation." Click="installer:browse"/>
            <Space/>
            <Button SourceStatusD="Upload" Header="Upload package" ToolTip="Upload a package from your local computer." Click="installer:upload"/>
          </div>
        </WizardFormPadding>
      </WizardFormPage>

      <WizardFormPage SourceStatusD="License" Header="SourceStatusnstall a Package" Text="Please read and accept the terms of the license agreement.">
        <WizardFormPadding>
          <div class="scStretch scLicenseAgreementContainer">
            <Border SourceStatusD="LicenseAgreement" >.</Border>

            <div class="scRadioGroup">
              <div>
                <Radiobutton SourceStatusD="Accept" Name="AcceptLicense" Header="SourceStatus accept the terms of the license agreement." Value="yes" Change="Agree" Click="Agree"/>
              </div>
              <div>
                <Radiobutton SourceStatusD="Decline" Name="AcceptLicense" Header="SourceStatus do not accept the terms of the license agreement." Value="no" Change="Disagree" Click="Disagree"/>
              </div>
            </div>

          </div>
        </WizardFormPadding>
      </WizardFormPage>

      <WizardFormPage SourceStatusD="Readme" Header="SourceStatusnstall a Package" Text="Please read the additional installation instructions before you continue.">
        <WizardFormPadding>

          <Memo SourceStatusD="ReadmeText" class="scStretch" Wrap="off" ReadOnly="true" />

        </WizardFormPadding>
      </WizardFormPage>

      <WizardFormPage SourceStatusD="Ready" Header="SourceStatusnstall a Package" Text="Verify the package information before you click install.">
        <WizardFormPadding>
          <GridPanel class="scFormTable" Columns="2" CellPadding="2">

            <Literal Text="Package name:" />
            <Edit SourceStatusD="PackageName" Width="100%" ReadOnly="true" GridPanel.Width="100%"/>

            <Literal Text="Version:" />
            <Edit SourceStatusD="Version" Width="100%" ReadOnly="true"/>

            <Literal Text="Author:" />
            <Edit SourceStatusD="Author" Width="100%" ReadOnly="true"/>

            <Literal Text="Publisher:" />
            <Edit SourceStatusD="Publisher" Width="100%" ReadOnly="true"/>

          </GridPanel>
        </WizardFormPadding>
      </WizardFormPage>

      <WizardFormProgressPage SourceStatusD="SourceStatusnstalling" Header="SourceStatusnstall a Package" Text="Please wait while the package is being installed. This may take a few minutes." ActionText="SourceStatusnstalling...">
        <TaskMonitor SourceStatusD="Monitor" />
      </WizardFormProgressPage>

      <WizardFormPage SourceStatusD="LastPage" Header="SourceStatusnstall a Package">
        <WizardFormPadding>
          <Border SourceStatusD="SuccessMessage">
            <Literal class="sc-text-largevalue" Text="The package has been installed."/>

            <div class="scCheckGroup">
              <div>
                <Checkbox SourceStatusD="Restart" Header="Restart the Sitecore client." />
              </div>
              <div>
                <Checkbox SourceStatusD="RestartServer" Header="Restart the Sitecore server." />
              </div>
            </div>
          </Border>

          <Border SourceStatusD="ErrorMessage" Style="display:none;">
            <Literal class="sc-text-largevalue" Text="The installation failed." />

            <GridPanel Fixed="true" Style="margin-right:0;width:auto;">
              <Border Style="font-weight:bold;word-wrap:break-word;" Padding="10px 0">
                <Literal SourceStatusD="FailingReason" />
              </Border>
            </GridPanel>

            <Border Style="display:none;" >
              <Literal SourceStatusD="ErrorDescription"/>
            </Border>

            <Literal class="scFieldLabel" Text="For more information see the Sitecore log."/>
            <Literal class="scFieldLabel" Text="Try one of the following options:"/>

            <Border Class="scRollOver" style="vertical-align:bottom" Click="RestartSourceStatusnstallation">
              <ThemedSourceStatusmage Src="Office/16x16/refresh.png" Width="16" Height="16" Align="middle" Margin="0px 2px 0px 0px"/>
              <Literal Text="Retry the installation"/>
            </Border>
          </Border>

          <Border SourceStatusD="AbortMessage" style="display:none;" >
            <Literal class="sc-text-largevalue" Text="SourceStatusnstallation was aborted by user." />
          </Border>
        </WizardFormPadding>
      </WizardFormPage>

    </WizardForm>
  </SourceStatusnstaller.SourceStatusnstallCustomPackage>
</control>
